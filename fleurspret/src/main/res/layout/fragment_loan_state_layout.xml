<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/shape_bg_ffffff_radius_6"
            android:backgroundTint="@color/color_F3F4F8"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_loan_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:textColor="@color/color_FFB02D"
                android:textSize="14sp"
                app:drawableStartCompat="@drawable/drawable_bg_width_2_height_10"
                app:drawableTint="@color/color_FFB02D"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Retardé de 2 jours" />

            <TextView
                android:id="@+id/tv_repayment_gold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_loan_state"
                tools:text="Retardé de 2 jours" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_repayment_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_repayment_gold_label">

                <TextView
                    android:id="@+id/tv_xof_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:text="@string/text_xof"
                    android:textColor="@color/color_242237"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_repayment_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_242237"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:text="300,702" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tv_repayment_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_loan_state"
                tools:text="Retardé de 2 jours" />

            <TextView
                android:id="@+id/tv_repayment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/color_242237"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/ll_repayment_gold"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="30–11-2020" />

            <View
                android:layout_width="1dp"
                android:layout_height="27dp"
                android:background="@color/color_59979797"
                app:layout_constraintBottom_toBottomOf="@id/ll_repayment_gold"
                app:layout_constraintEnd_toStartOf="@id/tv_repayment_date"
                app:layout_constraintStart_toEndOf="@id/ll_repayment_gold"
                app:layout_constraintTop_toTopOf="@id/ll_repayment_gold" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_state_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_bg_ffffff_radius_6"
            android:backgroundTint="@color/color_FFFAED"
            android:padding="14dp"
            android:textColor="@color/color_C68F0C"
            android:textSize="14sp"
            tools:text=" jours, veuillez la retourner immédiatement. En cas d'expiration malveillante, nous intenterons une action en justice contre vous par des voies légales!"
            tools:visibility="visible" />

        <include
            layout="@layout/layout_repayment_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginVertical="14dp"
            android:background="@color/color_F6F7F9" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_reloan_guide"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic_reloan_guide" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_d_tails"
                android:textColor="@color/color_242237"
                android:textSize="16sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:background="@drawable/shape_bg_stroke_e7e7e7_1_radius_6"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="14dp">

                <include layout="@layout/layout_information_between" />

                <include
                    layout="@layout/layout_information_between"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <include
                    layout="@layout/layout_information_between"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <include
                    layout="@layout/layout_information_between"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <include
                    layout="@layout/layout_information_between"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>