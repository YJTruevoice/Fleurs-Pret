<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/tv_policy_title_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_authorisation"
        android:textColor="@color/color_333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="21sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_bg_ffffff_radius_6"
        android:backgroundTint="@color/color_F3F4F8"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_btns"
        app:layout_constraintTop_toBottomOf="@id/tv_policy_title_head">

        <TextView
            android:id="@+id/tv_permission_declare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_policy_ask"
            android:textColor="@color/color_242237"
            android:textSize="16sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_read_privacy_policy_guide"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg_stroke_4635ff_1_radius_100"
            android:gravity="center"
            android:text="@string/text_refuse"
            android:textColor="@color/color_999999"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_bg_4635ff_radius_100"
            android:gravity="center"
            android:text="@string/text_accept_and_go_on"
            android:textColor="@color/color_FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_read_privacy_policy_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/text_read_privacy_policy_guide"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>