<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F7F9"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_policy_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_policy_top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_policy_title_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="@string/text_authorisation"
            android:textColor="@color/color_FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_policy_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:text="@string/text_policy_desc"
            android:textColor="@color/color_FFFFFF"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_policy_bottom"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_policy_head">

        <TextView
            android:id="@+id/tv_permission_declare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="420dp"
            android:text="@string/text_permission_declare"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="18dp"
            android:background="@drawable/shape_dash_line" />

        <TextView
            android:id="@+id/tv_read_privacy_policy_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_read_privacy_policy_guide"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape_bg_e7e7ed_radius_20"
                android:gravity="center"
                android:paddingHorizontal="38dp"
                android:text="@string/text_skip"
                android:textColor="@color/color_999999"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape_bg_3680d7_radius_20"
                android:gravity="center"
                android:paddingHorizontal="38dp"
                android:text="@string/text_accept_and_go_on"
                android:textColor="@color/color_FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>