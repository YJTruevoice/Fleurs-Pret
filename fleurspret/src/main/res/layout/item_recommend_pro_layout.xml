<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_bg_ffffff_radius_4"
        android:backgroundTint="@color/color_D8D8D8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_242237"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_app_logo"
        app:layout_constraintEnd_toStartOf="@id/tv_btn_go"
        app:layout_constraintStart_toEndOf="@id/iv_app_logo"
        app:layout_constraintTop_toTopOf="@id/iv_app_logo"
        tools:text="Coin Wallet" />

    <TextView
        android:id="@+id/tv_btn_go"
        android:layout_width="97dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/shape_bg_4635ff_radius_100"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text="@string/text_demander_miantenant"
        android:textColor="@color/color_FFFFFF"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_app_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>