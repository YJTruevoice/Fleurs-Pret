<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/shape_bg_stroke_e7e7e7_1_radius_4"
    android:orientation="vertical"
    android:padding="12dp">

    <include layout="@layout/view_name_and_state" />

    <include
        layout="@layout/view_montant_and_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_please_wait"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bg_stroke_4635ff_1_radius_100"
        android:gravity="center"
        android:text="@string/text_s_il_vous_pla_t_attendez"
        android:textColor="@color/color_4635FF"
        android:textSize="14sp" />
</androidx.appcompat.widget.LinearLayoutCompat>