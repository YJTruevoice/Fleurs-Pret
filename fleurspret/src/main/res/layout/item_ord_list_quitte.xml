<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/shape_bg_stroke_e7e7e7_1_radius_4"
    android:orientation="vertical"
    android:padding="12dp">

    <include
        android:id="@+id/in_ord_basic"
        layout="@layout/view_name_and_state" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/text_cette_commande_est_quitte_cliquez_sur_le_bouton_pour_en_emprunter_une_autre"
        android:textColor="@color/color_FF0000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_demander_maintenant"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bg_4635ff_radius_100"
        android:gravity="center"
        android:text="@string/text_demander_maintenant"
        android:textColor="@color/color_FFFFFF"
        android:textSize="14sp" />

</androidx.appcompat.widget.LinearLayoutCompat>