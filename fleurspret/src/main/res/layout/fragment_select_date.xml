<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_ffffff_radius_10_top"
    android:minHeight="400dp"
    android:paddingHorizontal="15dp"
    android:paddingTop="22dp"
    android:paddingBottom="30dp">

    <com.facile.immediate.electronique.fleurs.pret.view.calendarview.CalendarView
        android:id="@+id/cv_calendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@id/tv_calendar_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/tv_calendar_confirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/drawable_enable_state_btn"
        android:gravity="center"
        android:text="@string/text_next"
        android:textColor="@color/color_FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>