<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <View
        android:id="@+id/v_line_1"
        android:layout_width="1dp"
        android:layout_height="34dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_line_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_2"
        android:layout_width="1dp"
        android:layout_height="34dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_1"
        app:layout_constraintEnd_toStartOf="@id/v_line_3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_3"
        android:layout_width="1dp"
        android:layout_height="34dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_2"
        app:layout_constraintEnd_toStartOf="@id/v_line_4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_4"
        android:layout_width="1dp"
        android:layout_height="34dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_3"
        app:layout_constraintEnd_toStartOf="@id/v_line_5_mark"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_5_mark"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_4"
        app:layout_constraintEnd_toStartOf="@id/v_line_6"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_6"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_line_5_mark"
        app:layout_constraintStart_toEndOf="@id/v_line_7"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_7"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_6"
        app:layout_constraintEnd_toStartOf="@id/v_line_8"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_8"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_7"
        app:layout_constraintEnd_toStartOf="@id/v_line_9"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_9"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_8"
        app:layout_constraintEnd_toStartOf="@id/v_line_10_mark"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_10_mark"
        android:layout_width="1dp"
        android:layout_height="48dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_9"
        app:layout_constraintEnd_toStartOf="@id/v_line_11"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_11"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_10_mark"
        app:layout_constraintEnd_toStartOf="@id/v_line_12"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_12"
        android:layout_width="1dp"
        android:layout_height="34dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_11"
        app:layout_constraintEnd_toStartOf="@id/v_line_13"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_13"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_12"
        app:layout_constraintEnd_toStartOf="@id/v_line_14"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_line_14"
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:background="@color/color_C2C2C2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_line_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_offset_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textColor="@color/color_999999"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/v_line_10_mark"
        app:layout_constraintEnd_toEndOf="@id/v_line_10_mark"
        app:layout_constraintStart_toStartOf="@id/v_line_10_mark"
        tools:text="3000" />

    <TextView
        android:id="@+id/tv_offset_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textColor="@color/color_999999"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/v_line_5_mark"
        app:layout_constraintEnd_toEndOf="@id/v_line_5_mark"
        app:layout_constraintStart_toStartOf="@id/v_line_5_mark"
        tools:text="4000" />

</androidx.constraintlayout.widget.ConstraintLayout>